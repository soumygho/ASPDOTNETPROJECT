                    img.ImageUrl = info;
                    Label1.Text = info;
                    Panel1.Controls.Add(img);
                }
            }
            
        }
        catch (Exception ee)
        {
            MessageBox.Show(ee.Message);
        }
        finally
        {
            database.con.Close();
        }
